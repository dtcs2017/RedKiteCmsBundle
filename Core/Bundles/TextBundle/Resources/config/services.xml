<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app_text.block.class">AlphaLemon\AlphaLemonCmsBundle\Core\Bundles\TextBundle\Core\Block\AlBlockManagerText</parameter>
        
        <parameter key="text_editor_settings" type="collection">
            <parameter key="rich_editor">true</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="app_text.block" class="%app_text.block.class%">
            <argument type="service" id="event_dispatcher" />
            <tag name="alphalemon_cms.blocks_factory.block" description="Hypertext block" group="alphalemon_internals" />
        </service>
    </services>
</container>