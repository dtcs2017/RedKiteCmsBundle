<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app_script.block.class">AlphaLemon\AlphaLemonCmsBundle\Core\Bundles\ScriptBundle\Core\Block\AlBlockManagerScript</parameter>

        <parameter key="script_editor_settings" type="collection">
            <parameter key="html_editor">true</parameter>
            <parameter key="internal_js">true</parameter>
            <parameter key="external_js">true</parameter>
            <parameter key="external_css">true</parameter>
            <parameter key="internal_css">true</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="app_script.block" class="%app_script.block.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="alphalemon_cms.factory_repository" />
            <tag name="alphalemon_cms.blocks_factory.block" description="Script block" group="alphalemon_internals" />
        </service>
    </services>
</container>