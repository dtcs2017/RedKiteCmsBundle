<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="_show_blocks_editor" pattern="/backend/{_locale}/al_showBlocksEditor/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:showBlocksEditor</default>
        <default key="_locale">en</default>
        <default key="locked">idBlock</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="_show_available_blocks" pattern="/backend/{_locale}/al_showAvailableBlocks">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:showAvailableBlocks</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_add_block" pattern="/backend/{_locale}/addBlock">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:addBlock</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_edit_block" pattern="/backend/{_locale}/editBlock/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:editBlock</default>
        <default key="_locale">en</default>
        <default key="locked">idBlock</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_delete_block" pattern="/backend/{_locale}/deleteBlock/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:deleteBlock</default>
        <default key="_locale">en</default>
        <default key="locked">idBlock</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_show_external_files_manager" pattern="/backend/{_locale}/showExternalFilesManager/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:showExternalFilesManager</default>
        <default key="_locale">en</default>
        <default key="locked">idBlock</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_add_external_file" pattern="/backend/{_locale}/addExternalFile/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:addExternalFile</default>
        <default key="_locale">en</default>
        <default key="locked">idBlock</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_remove_external_file" pattern="/backend/{_locale}/removeExternalFile/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Blocks:removeExternalFile</default>
        <default key="_locale">en</default>
        <default key="locked">idBlock</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>