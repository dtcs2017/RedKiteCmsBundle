<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="_languages" pattern="/backend/{_locale}/al_showLanguages/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Languages:index</default>
        <default key="_locale">en</default>
        <default key="locked">idBlock</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_save_language" pattern="/backend/{_locale}/al_saveLanguage">
        <default key="_controller">AlphaLemonCmsBundle:Languages:saveLanguage</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="_delete_language" pattern="/backend/{_locale}/al_deleteLanguage">
        <default key="_controller">AlphaLemonCmsBundle:Languages:deleteLanguage</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="_load_language_attributes" pattern="/backend/{_locale}/al_loadLanguageAttributes">
        <default key="_controller">AlphaLemonCmsBundle:Languages:loadLanguageAttributes</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>
