<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="alpha_lemon_cms_themes" pattern="/backend/{_locale}/al_showThemesPanel/{locked}">
        <default key="_controller">RedKiteCmsBundle:Themes:show</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="alpha_lemon_cms_show_theme_changer" pattern="/backend/{_locale}/al_showThemeChanger/{locked}">
        <default key="_controller">RedKiteCmsBundle:Themes:showThemeChanger</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="alpha_lemon_cms_change_slot" pattern="/backend/{_locale}/al_changeSlot/{locked}">
        <default key="_controller">RedKiteCmsBundle:Themes:changeSlot</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="alpha_lemon_cms_change_theme" pattern="/backend/{_locale}/al_changeTheme/{locked}">
        <default key="_controller">RedKiteCmsBundle:Themes:changeTheme</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="alpha_lemon_cms_start_from_themes" pattern="/backend/{_locale}/startFromTheme/{locked}">
        <default key="_controller">RedKiteCmsBundle:Themes:startFromTheme</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="alpha_lemon_cms_show_themes_finalizer" pattern="/backend/{_locale}/al_showThemesFinalizer/{locked}">
        <default key="_controller">RedKiteCmsBundle:Themes:showThemesFinalizer</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="alpha_lemon_cms_finalize_theme" pattern="/backend/{_locale}/al_finalizeTheme/{locked}">
        <default key="_controller">RedKiteCmsBundle:Themes:finalizeTheme</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
</routes>
