<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="_themes" pattern="/backend/{_locale}/al_showThemes/{locked}">
        <default key="_controller">AlphaLemonThemeEngineBundle:Themes:show</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="_show_theme_changer" pattern="/backend/{_locale}/al_showThemeChanger/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Themes:showThemeChanger</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
        <requirement key="_method">POST</requirement>
    </route>
    
    <route id="_change_slot" pattern="/backend/{_locale}/al_changeSlot/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Themes:changeSlot</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="_change_theme" pattern="/backend/{_locale}/al_changeTheme/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Themes:changeTheme</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="_start_from_themes" pattern="/backend/{_locale}/startFromTheme/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Themes:startFromTheme</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="_show_themes_finalizer" pattern="/backend/{_locale}/al_showThemesFinalizer/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Themes:showThemesFinalizer</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
    
    <route id="_finalize_theme" pattern="/backend/{_locale}/al_finalizeTheme/{locked}">
        <default key="_controller">AlphaLemonCmsBundle:Themes:finalizeTheme</default>
        <default key="_locale">en</default>
        <default key="locked">themes</default>
    </route>
</routes>
