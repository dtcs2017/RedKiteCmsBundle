<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="images_block_edited.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\ImagesBlock\AlImagesBlockEditedListener</parameter>
        <parameter key="al_cms_bootstrap_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Cms\CmsBootstrapListener</parameter>
        <parameter key="al_cms_finalize_content_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\FinalizeContentsListener</parameter>
        <parameter key="al_access_deniend_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Security\AccessDeniedListener</parameter>
        <parameter key="al_add_seo_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Page\AddSeoListener</parameter>
        <parameter key="al_add_page_contents_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Page\AddPageBlocksListener</parameter>
        <parameter key="al_edit_seo_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Page\EditSeoListener</parameter>
        <parameter key="al_remove_seo_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Page\DeleteSeoListener</parameter>
        <parameter key="al_remove_page_contents_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Page\DeletePageBlocksListener</parameter>
        <parameter key="al_update_permalink_on_blocks_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Seo\UpdatePermalinkOnBlocksListener</parameter>
        <parameter key="al_change_template_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Page\ChangeTemplateListener</parameter>
        <parameter key="al_language_add_seo_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Language\AddLanguageSeoListener</parameter>
        <parameter key="al_language_add_blocks_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Language\AddLanguageBlocksListener</parameter>
        <parameter key="al_language_remove_seo_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Language\DeleteLanguageSeoListener</parameter>
        <parameter key="al_language_remove_blocks_listener.class">AlphaLemon\AlphaLemonCmsBundle\Core\Listener\Language\DeleteLanguageBlocksListener</parameter>
    </parameters>

    <services>
        <service id="images_block_edited.class" class="%images_block_edited.class%">
            <tag name="alcms.event_listener" event="actions.block_edited" method="onBlockEdited" priority="0" />
            <argument type="service" id="service_container" />
        </service>

        <service id="al_cms_bootstrap_listener" class="%al_cms_bootstrap_listener.class%">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="0" />
            <argument type="service" id="service_container" />
        </service>

        <service id="al_cms_finalize_content_listener" class="%al_cms_finalize_content_listener.class%">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" priority="0" />
            <argument type="service" id="service_container" />
        </service>

        <service id="al_access_deniend_listener" class="%al_access_deniend_listener.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" priority="255" />
            <argument type="service" id="security.context" />
            <argument type="service" id="security.authentication.trust_resolver" />
        </service>

        <service id="al_add_seo_listener" class="%al_add_seo_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_add_page_commit" method="onBeforeAddPageCommit" priority="0" />
            <argument type="service" id="al_seo_manager" />
            <argument type="service" id="language_model" />
        </service>

        <service id="al_edit_seo_listener" class="%al_edit_seo_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_edit_page_commit" method="onBeforeEditPageCommit" priority="0" />
            <argument type="service" id="al_seo_manager" />
        </service>

        <service id="al_add_page_contents_listener" class="%al_add_page_contents_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_add_page_commit" method="onBeforeAddPageCommit" priority="0" />
            <argument type="service" id="language_model" />
        </service>

        <service id="al_change_template_listener" class="%al_change_template_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_edit_page_commit" method="onBeforeEditPageCommit" priority="0" />
            <argument type="service" id="kernel" />
            <argument type="service" id="template_changer" />
            <argument type="service" id="template_slots_factory" />
        </service>

        <service id="al_remove_seo_listener" class="%al_remove_seo_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_delete_page_commit" method="onBeforeDeletePageCommit" priority="0" />
            <argument type="service" id="al_seo_manager" />
            <argument type="service" id="language_model" />
        </service>

        <service id="al_remove_page_contents_listener" class="%al_remove_page_contents_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_delete_page_commit" method="onBeforeDeletePageCommit" priority="0" />
            <argument type="service" id="language_model" />
        </service>

        <service id="al_update_permalink_on_blocks_listener" class="%al_update_permalink_on_blocks_listener.class%">
            <tag name="alcms.event_listener" event="seo.before_edit_seo_commit" method="onBeforeEditSeoCommit" priority="0" />
            <argument type="service" id="block_model" />
            <argument type="service" id="alphalemon_cms.block_manager_factory" />
        </service>

        <service id="al_language_add_seo_listener" class="%al_language_add_seo_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_add_language_commit" method="onBeforeAddLanguageCommit" priority="0" />
            <argument type="service" id="al_seo_manager" />
        </service>

        <service id="al_language_add_blocks_listener" class="%al_language_add_blocks_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_add_language_commit" method="onBeforeAddLanguageCommit" priority="0" />
            <argument type="service" id="al_block_manager" />
        </service>

        <service id="al_language_remove_seo_listener" class="%al_language_remove_seo_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_delete_language_commit" method="onBeforeDeleteLanguageCommit" priority="0" />
            <argument type="service" id="al_seo_manager" />
        </service>

        <service id="al_language_remove_blocks_listener" class="%al_language_remove_blocks_listener.class%">
            <tag name="alcms.event_listener" event="pages.before_delete_language_commit" method="onBeforeDeleteLanguageCommit" priority="0" />
            <argument type="service" id="al_block_manager" />
        </service>
    </services>
</container>