<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="red_kite_cms.orm">Propel</parameter>
        <parameter key="red_kite_cms.skin">bootstrap</parameter>
        <parameter key="red_kite_cms.web_folder">web</parameter>
        <parameter key="red_kite_cms.web_folder_full_path">%kernel.root_dir%/../%red_kite_cms.web_folder%</parameter>

        <parameter key="red_kite_cms.available_languages" type="collection">
            <parameter key="en">English</parameter>
            <parameter key="it">Italian</parameter>
        </parameter>

        <parameter key="red_kite_cms.upload_assets_dir">uploads/assets</parameter>
        <parameter key="red_kite_cms.upload_assets_full_path">%red_kite_cms.web_folder_full_path%/%red_kite_cms.upload_assets_dir%</parameter>
        <parameter key="red_kite_cms.upload_assets_absolute_path">/%red_kite_cms.web_folder%/%red_kite_cms.upload_assets_dir%</parameter>
        <parameter key="red_kite_cms.deploy_bundle.resources_dir">Resources</parameter>
        <parameter key="red_kite_cms.deploy_bundle.assets_base_dir">%red_kite_cms.deploy_bundle.resources_dir%/public</parameter>
        <parameter key="red_kite_cms.deploy_bundle.config_dir">%red_kite_cms.deploy_bundle.resources_dir%/config</parameter>
        <parameter key="red_kite_cms.deploy_bundle.views_dir">%red_kite_cms.deploy_bundle.resources_dir%/views</parameter>
        <parameter key="red_kite_cms.deploy_bundle.media_dir">media</parameter>
        <parameter key="red_kite_cms.deploy_bundle.js_dir">js</parameter>
        <parameter key="red_kite_cms.deploy_bundle.css_dir">css</parameter>
        <parameter key="red_kite_cms.deploy_bundle.controller">WebSite</parameter>   
    </parameters>
</container>