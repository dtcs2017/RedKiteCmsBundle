{% extends template %}

{% block internal_header_javascripts %}
{{ parent() }}
<script>

    function CmsStartInternalJavascripts(){
        try
        {
            {{ internal_javascripts|raw }}
        }
        catch(e)
        {
            alert(e);
        }
    }

    $(document).ready(function()
    {
        frontController = '{{ frontController }}';
        tl.pg.init(
            {
                "pg_caption": "Help"
            }
        );

        CmsStartInternalJavascripts();
        ObserveThemesPreviewCommands();
    });
</script>
{% endblock %}

{% block internal_header_stylesheets %}
    {{ parent() }}
{% endblock %}

{% block external_stylesheets %}
    {{ parent() }}

    {% for value in templateStylesheets %}
    <link href="{{ asset(value) }}" rel="stylesheet" type="text/css" media="all" />
    {% endfor %}

    {% if enable_yui_compressor is defined and enable_yui_compressor %}
        {% stylesheets filter='?yui_css,cssrewrite' 'components/alphalemoncms/twitter-bootstrap/css/bootstrap.min.css'
                                                    'components/pageguide/css/pageguide.min.css'
                                                    'bundles/alphalemoncms/vendor/vendor-adapter.css' 
                                                    'bundles/alphalemoncms/css/skins/bootstrap/skin.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="all" />
        {% endstylesheets %}
    {% else %}
        {% stylesheets filter='?cssrewrite' 'components/alphalemoncms/twitter-bootstrap/css/bootstrap.min.css'
                                            'components/pageguide/css/pageguide.min.css'
                                            'bundles/alphalemoncms/vendor/vendor-adapter.css' 
                                            'bundles/alphalemoncms/css/skins/bootstrap/skin.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="screen" />
        {% endstylesheets %}
    {% endif %}
{% endblock %}

{% block external_javascripts %}
    {{ parent() }}

    {% if enable_yui_compressor is defined and enable_yui_compressor %}
    {% javascripts  filter='?yui_js' 'components/jquery/jquery.min.js'
                                     'components/alphalemoncms/jquery-ui/js/jquery-ui.min.js'
                                     'components/alphalemoncms/twitter-bootstrap/js/bootstrap.min.js'
                                     'components/pageguide/js/pageguide.js' 
                                     'bundles/alphalemoncms/js/al-dialog.js'
                                     'bundles/alphalemoncms/js/al-ajax-loader.js'
                                     'bundles/alphalemoncms/js/al-themes-preview.js'
    %}    
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% else %}
    {% javascripts  'components/jquery/jquery.min.js'
                    'components/alphalemoncms/jquery-ui/js/jquery-ui.min.js'
                    'components/alphalemoncms/twitter-bootstrap/js/bootstrap.min.js'
                    'components/pageguide/js/pageguide.js' 
                    'bundles/alphalemoncms/js/al-dialog.js'
                    'bundles/alphalemoncms/js/al-ajax-loader.js'
                    'bundles/alphalemoncms/js/al-themes-preview.js' 
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% endif %}

    {% for value in templateJavascripts %}
    <script src="{{ asset(value) }}"></script>
    {% endfor %}
{% endblock %}

{% block body %}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <a class="brand" href="#"><img src="/{{ skin_path }}/images/main_menu/small-logo.png" />AlphaLemon CMS</a>
        <p class="nav navbar-text">Theme:</p>
        <p class="nav navbar-text" id="al_current_theme">{{ theme_name }}</p>
        <p class="nav navbar-text">Template:</p>
        <p class="nav navbar-text" id="al_current_template">{{ template_name }}</p>
        
        <span class="pull-right">
            <div class="btn-group dropdown-zindex">
                <button class="btn">Change template</button>
                <button class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-height pull-right dropdown-zindex">
                    {% for template in templates %}
                    <li><a href="#" class="al_template">{{ template.getTemplateName }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="btn-group dropdown-zindex">
                <button class="btn">Commands</button>
                <button class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-height pull-right dropdown-zindex">
                    <li><a id="al_active_theme_toggler" href="#">Show panel</a></li>
                    <li><a id="al_reset" href="#">Reset</a></li>
                    <li><a id="al_save" href="#">Save and activate</a></li>
                    <li><a id="al_back" href="/{{ app.environment }}.php/backend/{{ app.request.get('languageName')}}/{{app.request.get('pageName')}}">Return to CMS</a></li>
                </ul>
            </div>              
            {% include 'AlphaLemonCmsBundle:Cms:menu_combo.html.twig' with {'id': 'al_available_languages', 'items' : available_languages, 'text' : 'English', 'value' : 'en', 'button_type' : 'btn-primary', 'type' : 'al_site_language_item'}  %}
            <span id="al_referal_language" class="al_hidden">{{ app.request.get('languageName') }}</span>
            <span id="al_referal_page" class="al_hidden">{{ app.request.get('pageName') }}</span>
        </span>
    </div>
</div>

<div id="al_cms_contents">
{{ parent() }}
</div>

<div id="al_active_theme">
    <div>
        <span class="al_active_templates_caption">Templates</span>
        {% include 'AlphaLemonCmsBundle:Preview:_active_theme_templates.html.twig' with {'templates': templates}  %}
    </div>
    <div id="al_slots">
        {% include 'AlphaLemonCmsBundle:Preview:_active_theme_slots.html.twig' with {'templates': templates, 'block_managers' : block_managers}  %}
    </div>
</div>

{% include "AlphaLemonCmsBundle:Preview:PageGuide/_help.html.twig" %}

{% endblock %}
