<ul class="al-{{ section }}">
{% for file_name in files %}
    {% if file_name != "" %}
    <li class="al-{{ section }}-removable-item {{ cycle(['alternate_row', 'row'], loop.index) }}" rel="{{ file_name }}">{{ file_name }}</li>
    {% endif %}
{% endfor %}
</ul>
<input id="al-{{ section|lower }}-external-files" type="hidden" value="{{ value }}" />

