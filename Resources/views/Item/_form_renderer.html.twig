{% extends 'RedKiteCmsBundle:Item:_languages_support.html.twig' %}

{% form_theme form 'RedKiteCmsBundle:Item:_form_label.html.twig'  %}

{% block content %}
{% if widget_class is not defined %}
{% set widget_class = 'al_form_item' %}
{% endif %}
{% for item in form %}
    {% if ("hidden" not in item.vars.block_prefixes) %}
    <tr>
        <td>{{ form_label(item, null, {'cms_language': cms_language}) }}</td>
        <td>{{ form_errors(item) }}
        {% if ("textarea" in item.vars.block_prefixes) %}
            {{ form_widget(item, { 'attr': {'rows' : 4, 'class' : 'textarea ' ~ widget_class }}) }}
        {% elseif ("text" in item.vars.block_prefixes) %}
            {{ form_widget(item, { 'attr': {'class' : 'input-medium ' ~ widget_class }}) }}
        {% else %}
            {{ form_widget(item) }}
        {% endif %}
        </td>
    </tr>
    {% endif %}
{% endfor %}
{{ form_rest(form) }}
{% endblock %}
