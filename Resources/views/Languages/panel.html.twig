{% form_theme form 'RedKiteCmsBundle:Bootstrap:' ~ bootstrap_version ~ '/FormTheme/forms.html.twig' %}

{% set panel_class = 'al_panel_contents_width' %}   

<div class="panel-container">
    {% include 'RedKiteCmsBundle:Panels:_panel_header.html.twig' with { 'title' : 'Languages manager'|trans({}, 'RedKiteCmsBundle', cms_language) } %}
    <div id="al_sidebar_left" class="pull-left pages-left panel-column">
        {% include 'RedKiteCmsBundle:Languages:languages_list.html.twig' %}
    </div>
    <div id="al_sidebar_right" class="pull-right pages-right panel-column">
        <div>        
            <h2>{{ "languages_controller_language_attribute" | trans({}, 'RedKiteCmsBundle', cms_language) }}</h2>
            <form id="al_languages_form">
                {{ form(form) }}
            </form>
        </div>
        <div>
            <input id="al_language_saver" type="submit" value="{{ "common_label_save"|trans({}, 'RedKiteCmsBundle', cms_language) }}" class="btn btn-primary" />       
        </div>
    </div>
    <div class="clearfix"></div>
</div>