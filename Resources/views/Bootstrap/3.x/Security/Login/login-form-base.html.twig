{% set form_title = title is defined ? title : "RedKite CMS Login" %} 
{% set form_body= body is defined ? body : "Please authenticate yourself to start with RedKite CMS" %} 

{% if error %}
    <div class="text-error">{{ error }}</div>
{% endif %}

{% set login_route = route is defined ? route : "_login_check" %}  
    
<div id="rk-signin-form" class="box-centered">
    <div id="rk-container"> 
    <img src="/bundles/redkitecms/css/skins/bootstrap/images/rklogo-64.png" width="32" height="32" class="pull-left"/>
    <h1>{{ form_title }}</h1>
    <p>{{ form_body }}</p>
    </div>
    <form action="{{ path(login_route) }}" method="post" id="login" class="form-horizontal" role="form">

        <div class="form-group">
            <label class="col-lg-4 control-label" for="username">Username</label>
            <div class="col-lg-6">
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-lg-4 control-label" for="password">Password</label>
            <div class="col-lg-6">
                <input type="password" id="password" name="_password" class="form-control">
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-6">
                <button type="submit" class="btn btn-default">Sign in</button>
            </div>
        </div>

        {% if target is defined %}
        <input type="hidden" name="_target_path" value="{{ target }}" />
        {% endif %}
    </form>
</div>
