{% extends 'AlphaLemonCmsBundle:Security:base.html.twig' %}

{% block content %}
<div class="al_security_list">
    <h2>{{ "Users management"|trans({}, security_controller_domain, cms_language) }}</h2>
    <table class="table">
        <thead>
            <th>{{ "Username"|trans({}, security_controller_domain, cms_language) }}</th>
            <th>{{ "Email"|trans({}, security_controller_domain, cms_language) }}</th>
        </thead>
    {% for user in users %}
        <tr>
            <td width="50%">{{ user.username }}</td>
            <td width="30%">{{ user.email }}</td>
            <td><a href="#" rel="{{ user.id }}" class="al_edit_user">{{ "Edit"|trans({}, common_domain, cms_language) }}</a></td>

            <td>
                {% if(user.id != app.security.getToken().getUser().getPrimaryKey()) %}
                <a href="#" class="al_delete_user" rel="{{ user.id }}">{{ "Delete"|trans({}, common_domain, cms_language) }}</a>
                {% else %}
                -
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
<div class="al_security_commands_box">
    <ul class="inline pull-right">
        <li><input type="submit" value="{{ "New"|trans({}, common_domain, cms_language) }}" class="al_add_user btn btn-primary" /></li>
        <li><input type="submit" value="{{ "Roles"|trans({}, security_controller_domain, cms_language) }}" class="al_list_roles btn btn-info" /></li>
    </ul>
    <div class="clearfix"></div>
</div>
{% endblock %}
