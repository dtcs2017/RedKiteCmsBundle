{% extends 'RedKiteCmsBundle:Bootstrap:' ~ bootstrap_version ~ '/base.html.twig' %}

{% block body %}
<div class="al_security_list">
    <h2>{{ "security_controller_label_roles_management"|trans({}, 'RedKiteCmsBundle', cms_language) }}</h2>
    <table class="table table-condensed table-hover">
        <tbody>
            <thead>
                <th></th>
                <th>{{ "security_controller_label_rolename"|trans({}, 'RedKiteCmsBundle', cms_language) }}</th>
                <th></th>
            </thead>
            {% for role in roles %}
            <tr>
                <td>{{ page_icon|raw }}</td>
                <td width="100%">
                    <a href="#" data-entity-id="{{ role.id }}" rel="{{ role.id }}" class="al_edit_role">{{ role.role }}</a>
                </td>
                <td>
                    <a href="#">
                        <button class="btn btn-xs btn-danger al_delete_role btn-mini" data-entity-id="{{ role.id }}">
                            {{ trash_icon|raw }}
                        </button>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}