{% extends 'RedKiteLabsThemeEngineBundle:Frontend:base.html.twig' %}

{% block external_stylesheets %}
    {% stylesheets  filter='cssrewrite' 'components/redkitecms/twitter-bootstrap/3.x/css/bootstrap.min.css'
                                                 'bundles/redkitecms/css/skins/bootstrap/skin.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="all" />
    {% endstylesheets %}
{% endblock %}
    
{% block body_tag %}<body class="black-bg">{% endblock %}

{% block body %}
    <div id="rk-container" class="box-centered"> 
        <img src="/bundles/redkitecms/css/skins/bootstrap/images/login-logo.png"  />

        <div id="rk-signin-form">
            {% include('RedKiteCmsBundle:Bootstrap:3.x/Security/Login/login-form-base.html.twig') %}
                
            {% if error %}
                <div class="text-error">{{ error }}</div>
            {% endif %}
        </div>
    </div>
{% endblock %}
