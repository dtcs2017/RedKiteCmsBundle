<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="el_finder.file_connector">AlphaLemon\Block\FileBundle\Core\ElFinder\ElFinderFileConnector</parameter>
        <parameter key="app_file.base_folder">files</parameter>
        <parameter key="app_file.block.class">AlphaLemon\Block\FileBundle\Core\Block\AlBlockManagerFile</parameter>

        <parameter key="markdowngeshi.stylesheets" type="collection">
            <parameter>@FileBundle/Resources/public/css/markdown.css</parameter>
        </parameter>

        <parameter key="al_file_rendering.class">AlphaLemon\Block\FileBundle\Core\Listener\RenderingEditorListener</parameter>
        <parameter key="al_file.form.class">AlphaLemon\Block\FileBundle\Core\Form\AlFileType</parameter>
    </parameters>

    <services>
        <service id="el_finder.file_connector" class="%el_finder.file_connector%" >
            <argument type="service" id="service_container" />
        </service>

        <service id="app_file.block" class="%app_file.block.class%">
            <argument type="service" id="service_container" />
            <tag name="alphalemon_cms.blocks_factory.block" description="File block" type="File" group="alphalemon_internals" />
        </service>

        <service id="al_file_rendering" class="%al_file_rendering.class%">
            <tag name="alcms.event_listener" event="actions.block_editor_rendering" method="onBlockEditorRendering" priority="0" />
        </service>
        <service id="al_file.form" class="%al_file.form.class%">
        </service>
    </services>
</container>
